{
	"name": "raxif",
	"displayName": "RaxIf",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:raxif.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == javascriptreact",
					"command": "raxif.format",
					"group": "1_modification"
				}
			]
		},
		"commands": [
			{
				"command": "raxif.format",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"@babel/core": "^7.15.5",
    "@babel/plugin-syntax-jsx": "^7.14.5"
	}
}
